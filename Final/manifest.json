{
    "name": "Chrome Dictionary/Thesaurus Extension",
    "description": "Double click a word on the webpage to display its defenition along with its synonyms!",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["getInfo.js"]
        }
    ],

    "browser_action": {
        "default_title": "Chrome Dictionary/Thesaurus Extension"
    },

    "manifest_version": 2
}
