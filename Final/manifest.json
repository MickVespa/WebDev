{
    "name": "Dbl_Click_Dict",
    "description": "Double click a word on the webpage to display its definition along with its synonyms!",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["getInfo.js", "jquery-3.6.0.min.js"],
            "css": ["style.css"]
        }
    ],
    "icons": {
        "16": "/images/icon16.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "action": {
        "default_title": "Chrome Dictionary/Thesaurus Extension"
    },

    "manifest_version": 3
}
